@model MvcMovie.Models.MovieGenreViewModel

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div id="filterForm">
    <p>
        <select id="movieGenreFilter" asp-for="MovieGenre" asp-items="Model.Genres">
            <option value="">All Genres</option>
        </select>

        <select id="movieRatingFilter" asp-for="MovieRating" asp-items="Model.Ratings">
            <option value="">All Ratings</option>
        </select>

        Title: <input type="text" id="searchStringInput" asp-for="SearchString" />
        <button id="filterButton" type="button">Filter</button>
    </p>
</div>

<div id="movieListContainer">
    @await Html.PartialAsync("_MovieListPartial", Model)
</div>

@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }

    <script>
        $(document).ready(function () {

            function applyFilters() {
                var movieGenre = $('#movieGenreFilter').val();
                var movieRating = $('#movieRatingFilter').val();
                var searchString = $('#searchStringInput').val();

                var url = '@Url.Action("Index", "Movies")' +
                          '?movieGenre=' + encodeURIComponent(movieGenre || '') +
                          '&movieRating=' + encodeURIComponent(movieRating || '') +
                          '&searchString=' + encodeURIComponent(searchString || '') +
                          '&isAjax=true';

                $.ajax({
                    url: url,
                    type: 'GET',
                    success: function (data) {
                        $('#movieListContainer').html(data);
                    },
                    error: function (xhr, status, error) {
                        console.error("AJAX Error: " + status + " " + error);
                    }
                });
            }

            $('#movieGenreFilter').change(applyFilters);
            $('#movieRatingFilter').change(applyFilters);
            $('#filterButton').click(applyFilters);
        });
    </script>
}
